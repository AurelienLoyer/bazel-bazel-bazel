{
  "name": "svelte-app",
  "version": "1.0.0",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "rollup": "^1.12.0",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^4.0.4",
    "svelte": "^3.0.0"
  },
  "dependencies": {
    "@bazel/bazel": "^0.29.0",
    "@bazel/ibazel": "^0.10.3",
    "@bazel/typescript": "^0.36.1",
    "sirv-cli": "^0.4.4"
  },
  "scripts": {
    "build": "rollup -c",
    "autobuild": "rollup -c -w",
    "dev": "run-p start:dev autobuild",
    "start": "sirv public --single",
    "start:dev": "sirv public --single --dev",
    "bazel:prod": "bazel run //src/server",
    "bazel:dev": "ibazel run //client:dev_server",
    "bazel:create-docker-image": "bazel run //src/server:app_image",
    "bazel:push-docker-image": "bazel run //src/server:push"
  }
}
